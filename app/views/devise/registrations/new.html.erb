<div class="row" align-center>
  <div class="col l4 offset-l4">
    <h4 class="center">Registrati</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <br>
    <br>
    <br>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.email_field :name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caratteri minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :Conferma_password %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

    <br>
    <br>

  <div class="actions">
    <%= f.submit "Registrati", class:"waves-effect waves-light btn btn-devise blue darken-1" %>
  </div>

    <br>
    <br>

    <% end %>

    <%= render "devise/shared/links" %>

    <br>
    <br>

  </div>

</div>






